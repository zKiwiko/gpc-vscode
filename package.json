{
  "name": "gpc-vscode",
  "displayName": "GPC Language Tools",
  "description": "GPC Language Tools for VSCode",
  "version": "1.2.4",
  "internal-version": "1.2.3",
  "publisher": "zkiwiko",
  "license": "GPL-3.0-only",
  "icon": "images/cronus-blue.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zkiwiko/gpc-vscode"
  },
  "bin": {
    "gpc-language-server": "./bin/gpc-language-server.js"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [{
      "command": "gpc.openDocumentation",
      "title": "Open Documentation",
      "category": "GPC"
    }],
    "menus": {
      "commandPalette": [{
        "command": "gpc.openDocumentation",
        "when": "resourceExtname == .gpc",
        "group": "navigation"
      }]
    },
    "languages": [{
      "id": "gpc",
      "aliases": ["GPC", "gpc"],
      "extensions": [".gpc"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "gpc",
      "scopeName": "source.gpc",
      "path": "./syntaxes/gpc.tmLanguage.json"
    }],
    "configuration": {
      "title": "GPC Language Support",
      "properties": {
        "gpc.useLegacyLsp": {
          "type": "boolean",
          "default": false,
          "description": "Use legacy LSP implementation"
        },
        "gpc.ersa.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Ersa binary. Leave empty to auto-detect (looks for 'ersa' in PATH or user directory)."
        },
        "gpc.lsp.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to the LSP binary"
        },
        "gpc.lsp.experimentalFeatures": {
          "type": "object",
          "default": {},
          "description": "Enable experimental LSP features",
          "properties": {
            "imports": {
              "type": "boolean",
              "default": false,
              "description": "Enable experimental imports support"
            },
            "macros": {
              "type": "boolean",
              "default": false,
              "description": "Enable experimental macros support"
            },
            "all": {
              "type": "boolean",
              "default": false,
              "description": "Enable all experimental features"
            }
          }
        },
        "gpc.mainFile": {
          "type": "string",
          "default": "",
          "description": "Path to the main GPC file (relative to workspace root). Symbols from this file and its includes will be globally available. Leave empty for auto-detection (looks for main.gpc or a file with main() function)."
        }
      }
    },
    "semanticTokenScopes": [
      {
        "language": "gpc",
        "scopes": {
          "variable": ["variable.other.gpc"],
          "variable.readonly": ["variable.other.constant.gpc"],
          "variable.modification": ["variable.other.include.gpc"],
          "function": ["entity.name.function.gpc"],
          "function.defaultLibrary": ["support.function.gpc"],
          "function.modification": ["entity.name.function.include.gpc"],
          "property": ["constant.language.gpc"],
          "type": ["entity.name.type.gpc"],
          "type.modification": ["entity.name.type.include.gpc"]
        }
      }
    ],
    "configurationDefaults": {
      "editor.semanticTokenColorCustomizations": {
        "[*]": {
          "rules": {
            "*.modification:gpc": {
              "fontStyle": "italic"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "gen": "antlr4ts -visitor -no-listener -o src/server/parser src/antlr/gpc_grammar.g4",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
